<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="8dp">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/rv_weekly_weather_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/art_light_rain"/>

    <TextView
        android:id="@+id/rv_weekly_day"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:gravity="center"
        tools:text="Sat"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:textSize="18sp"
        android:layout_toEndOf="@+id/rv_weekly_weather_icon" />

    <TextView
        android:id="@+id/rv_weekly_temp"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginEnd="14dp"
        android:layout_toEndOf="@+id/rv_weekly_day"
        android:gravity="center"
        android:textSize="16sp"
        tools:text="32/26" />

    <TextView
        android:id="@+id/rv_weekly_weather_description"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="7dp"
        android:layout_toEndOf="@+id/rv_weekly_temp"
        android:gravity="center"
        tools:text="Mostly cloudy with a thunderstorm" />
</RelativeLayout>